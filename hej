using System;


namespace Uppdrag3
{
    public static class Second
    {


        // Function greeting the user
        public static void Greeting()
        {
            Console.WriteLine("Hej och välkommen till Alvas bibliotek!");
            Console.WriteLine("     ");
            Console.WriteLine("     ");
        }
        // Functions for the choices in the menu 
        public static void FirstChoice(string title)
        {
            Console.Clear();
            Console.WriteLine("boken " + title + " är nu registrerad!");

            Console.ReadKey();
        }
        public static void SecondChoice()
        {
            Console.Clear();
            Console.WriteLine("Du valde att hantera utlånade böcker!");

            //List of books
            Console.WriteLine("  ");
            Console.WriteLine("böcker som är utlånade just nu:");
            Console.WriteLine("Mina första år, Vi var lögnare, Hobbit, Harry Potter, ");
            Console.ReadKey();
        }
        public static void ThirdChoice()
        {
            Console.Clear();
            Console.WriteLine("Du valde returnera böcker, sök efter böcker & boka böcker!");
            Console.WriteLine("  ");
            Console.WriteLine("  ");
            //Options of service
            Console.WriteLine("returnera böcker = 1, sök efter böcker = 2, boka böcker = 3");

            Console.WriteLine("Skriv in ditt val!");
            Console.WriteLine("  ");
            //this is an example of try-parse
            try
            {
                int.TryParse(Console.ReadLine(), out int x);
                if (x == 1)
                {
                    Console.Clear();
                    Console.WriteLine("Du valde returnera böcker!");

                }
                else if (x == 2)
                {
                    Console.Clear();
                    Console.WriteLine("Du valde sök efter böcker!");

                }
                else if (x == 3)
                {
                    Console.Clear();
                    Console.WriteLine("Du valde boka böcker!");

                }
                else
                {
                    Console.WriteLine("Inget av de ovanstående valen gäller");
                }

                Console.ReadKey();
            }
            catch (Exception)
            {

                throw;
            }

        }
        public static void FourthChoice()
        {
            Console.Clear();
            Console.WriteLine("Du valde att hantera personal!");

            //List of personell
            Console.WriteLine("  ");
            Console.WriteLine("Personal:");
           
            string[] personellArray = new string[] { "Magnus", "Rune", "Elsa", "Sofia" };

            foreach(string personell in personellArray)
            {
                Console.Write(personell);
                Console.WriteLine(" ");
            }




            Console.ReadKey();
        }
        public static void FifthChoice()
        {
            //exit the program
            Console.Clear();
            Console.WriteLine("Du valde att avsluta programmet! Hejdå!");
            Console.ReadKey();
            Environment.Exit(1);

        }

    }
}
